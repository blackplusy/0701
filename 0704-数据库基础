1.
select count(*) from table1 t1,table2 t2
where t1.学生id=t2.学生id;
2.
select t2.家庭住址 from table1 t1,table2 t2
where t1.学生id=t2.学生id
and t1.姓名 like '张%'
and t1.性别='女'
order by t1.姓名 ;

